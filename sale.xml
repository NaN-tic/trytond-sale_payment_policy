<tryton>
    <data>
        <record model="ir.ui.view" id="sale_payment_policy_view_form">
            <field name="model">sale.payment.policy</field>
            <field name="type">form</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <![CDATA[
                <form string="Payment Policy" col="4">
                    <label name="payment_type"/>
                    <field name="payment_type"/>
                    <label name="invoice_method"/>
                    <field name="invoice_method"/>
                    <label name="shipment_method"/>
                    <field name="shipment_method"/>
                </form>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_payment_policy_view_tree">
            <field name="model">sale.payment.policy</field>
            <field name="type">tree</field>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <![CDATA[
                <tree string="Payment Policies">
                    <field name="payment_type"/>
                    <field name="invoice_method"/>
                    <field name="shipment_method"/>
                </tree>
                ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_shop_view_form">
            <field name="model">sale.shop</field>
            <field name="type">form</field>
            <field name="inherit" ref="sale_shop.sale_shop_view_form"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                    <xpath
                            expr="/form/notebook/page[@id=&quot;general&quot;]"
                            position="after">
                        <page string="Payment Policies" id="payment_policies" col="4">
                            <field name="payment_policies" colspan="4"
                                    view_ids="sale_payment_policy.sale_payment_policy_view_tree"/>
                        </page>
                    </xpath>
                </data>
                ]]>
            </field>
        </record>
    </data>
</tryton>
